<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
android:background="@color/primary_color"
    tools:context=".MainFragment">


    <ImageView
        android:id="@+id/userAvatarIv"
        android:layout_width="120dp"
        android:layout_height="120dp"
        android:layout_gravity="center_horizontal"
        android:scaleType="centerCrop"
        android:src="@drawable/ic_launcher_foreground"
        app:layout_constraintEnd_toEndOf="parent"
        android:visibility="gone"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/addAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:background="@drawable/input"
        android:padding="15dp"
        android:text="@string/add_accident"

        android:textColor="@color/white"

        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="@+id/joinAcc"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/joinAcc"
        app:layout_constraintTop_toBottomOf="@+id/joinAcc" />

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/joinAcc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="15dp"
        android:background="@drawable/input"
        android:padding="15dp"
        android:text="@string/join_accident"
        android:textColor="@color/white"

        app:layout_constraintBottom_toTopOf="@+id/addAcc"
        app:layout_constraintEnd_toEndOf="@+id/userAvatarIv"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toStartOf="@+id/userAvatarIv"
        app:layout_constraintTop_toBottomOf="@+id/userAvatarIv"
        app:layout_constraintVertical_chainStyle="packed" />




</androidx.constraintlayout.widget.ConstraintLayout>